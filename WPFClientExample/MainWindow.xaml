<Window x:Class="WPFClientExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClientExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- 로그인 후에만 메뉴와 로그아웃 버튼 표시 -->
        <StackPanel Orientation="Horizontal" Visibility="{Binding IsAuthenticated, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Button Content="Search" Command="{Binding NavigateToCommand}" CommandParameter="Search"/>
            <Button Content="Detail" Command="{Binding NavigateToCommand}" CommandParameter="Detail"/>
            <Button Content="Report" Command="{Binding NavigateToCommand}" CommandParameter="Report"/>
            <Button Content="Settings" Command="{Binding NavigateToCommand}" CommandParameter="Settings"/>
            <Button Content="Notification Log" Command="{Binding NavigateToCommand}" CommandParameter="NotificationLog"/>
            <Button Content="Admin" Command="{Binding NavigateToCommand}" CommandParameter="Admin"/>

            <!-- 로그아웃 버튼 -->
            <Button Content="Logout" Command="{Binding LogoutCommand}" Foreground="Red" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- 현재 View -->
        <ContentControl Content="{Binding CurrentView}" Grid.Row="1"/>

    </Grid>
</Window>
