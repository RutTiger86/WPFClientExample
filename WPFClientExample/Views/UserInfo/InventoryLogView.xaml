<UserControl x:Class="WPFClientExample.Views.UserInfo.InventoryLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFClientExample.Views.UserInfo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 검색 필터 -->
        <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Top" >
            <DatePicker VerticalAlignment="Center" SelectedDate="{Binding SearchStartDate, Mode=TwoWay}"/>
            <Label Content="~" Margin="0,5,0,5"/>
            <DatePicker VerticalAlignment="Center" SelectedDate="{Binding SearchEndDate, Mode=TwoWay}"/>
            
            <Button Content="Search" Width="80" Margin="5" x:Name="SearchButton"  Command="{Binding SearchCommand}"/>
        </StackPanel>

        <!-- InventoryHistory 리스트 -->
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True"
          Margin="5" Grid.Column="0" ItemsSource="{Binding TargetInventoryHistory, Mode= OneWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Log ID" Binding="{Binding LogId}" Width="auto"/>
                <DataGridTextColumn Header="Character Name" Binding="{Binding ChangeType}" Width="auto"/>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="auto"/>
                <DataGridTextColumn Header="Item ID" Binding="{Binding ItemId}" Width="auto"/>
                <DataGridTextColumn Header="ItemName" Binding="{Binding ItemName}" Width="auto"/>
                <DataGridTextColumn Header="Befor Quantity" Binding="{Binding BeforeQuantity}" Width="auto"/>
                <DataGridTextColumn Header="Quantity Change" Binding="{Binding QuantityChange}" Width="auto"/>
                <DataGridTextColumn Header="After Quantity" Binding="{Binding AfterQuantity}" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
