<UserControl x:Class="WPFClientExample.Views.UserInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFClientExample.Views"             
             xmlns:userInfoView="clr-namespace:WPFClientExample.Views.UserInfo"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"     
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 검색 필터 -->
        <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Top">
            <ComboBox Width="150" Margin="5" x:Name="SearchFilterComboBox" ItemsSource="{Binding SearchType}"
                      SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding SelectedSearchType, Mode= TwoWay}">
            </ComboBox>
            <TextBox Width="200" Margin="5" x:Name="SearchTextBox" Text="{Binding SearchText}"/>
            <Button Content="검색" Width="80" Margin="5" x:Name="SearchButton"  Command="{Binding SearchCommand}"/>
            <Label Content="(AccountID : 12345678, AccountName : TestAccount)" FontSize="12"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MaxWidth="300"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- 캐릭터 리스트 -->
            <DataGrid x:Name="CharacterDataGrid" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True"
                      Margin="5" Grid.Column="0" ItemsSource="{Binding CharacterInfos, Mode= OneWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="서버번호" Binding="{Binding ServerId}" Width="auto"/>
                    <DataGridTextColumn Header="서버명" Binding="{Binding ServerName}" Width="auto"/>
                    <DataGridTextColumn Header="캐릭터ID" Binding="{Binding CharacterId}" Width="auto"/>
                    <DataGridTextColumn Header="캐릭터명" Binding="{Binding CharacterName}" Width="*"/>
                </DataGrid.Columns>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding CharcterSelectionChagedCommand}" 
                                               CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </DataGrid>

            <TabControl Grid.Column="1">
                <TabItem Header="캐릭터 정보">
                    <ContentPresenter Content="{Binding CharacterInfoView}" />
                </TabItem>
                <TabItem Header="인벤토리 로그">
                    <ContentPresenter Content="{Binding InventoryLogView}" />
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
